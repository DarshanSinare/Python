import calendar

def calendar_month():
    year = int(input("Enter the year of calender"))
    month = int(input("Enter the month of calender"))
    print("\n",calendar.month(year, month))

def calender_year():
    year = int(input("Enter the year of calender: "))
    print("\n", calendar.TextCalendar().formatyear(year, 2, 1, 1, 3))

def main():
    while True:
        print("SELECT YOUR CHOICE")
        print("1. Print specific month calendar")
        print("2. Print specific year calendar")
        print("3. Exit")
        
        choice = input("Enter your choice: ")
        
        if choice == '1':
            calendar_month()
        elif choice == '2':
           calender_year()
        elif choice == '3':
            print("Incorrect choice given Exit")
            break
        else:
            print("Invalid Option")
            
print("hello")
main()
